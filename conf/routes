# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /status                           controllers.StatusController.status

POST    /public/v1/cars                   controllers.CarController.add
PUT     /public/v1/cars                   controllers.CarController.update
GET     /public/v1/cars/:id               controllers.CarController.get(id: String)
DELETE  /public/v1/cars/:id               controllers.CarController.delete(id: String)
GET     /public/v1/cars                   controllers.CarController.getAll(sort: Option[String] ?= Some("id"), desc: Option[Boolean] ?= Some(false))
